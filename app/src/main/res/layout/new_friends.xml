<?xml version="1.0" encoding="utf-8"?>
<com.fifteentec.Component.calendar.KeyboardLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/keyboardLayout_new_friends"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:focusable="true"
    android:focusableInTouchMode="true" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="60dp" >

                <TextView
                    android:id="@+id/new_friedns_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="添加朋友" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/new_friedns_ll_search"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="5dip"
                android:layout_marginTop="5dip"
                android:background="#ff0" >

                <EditText
                    android:id="@+id/new_friedns_et_search"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_toLeftOf="@+id/new_friedns_tv_search"
                    android:background="#00f"
                    android:gravity="center_vertical"
                    android:hint="搜索"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/new_friedns_tv_search"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ic_launcher" />
            </RelativeLayout>

            <ListView
                android:id="@+id/new_friends_lv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:visibility="gone" >
            </ListView>

            <RelativeLayout
                android:id="@+id/new_friends_rl_check"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/new_friends_tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:text="验证信息" />

                <EditText
                    android:id="@+id/new_friends_et_check"
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:layout_alignLeft="@id/new_friends_tv_title"
                    android:layout_below="@id/new_friends_tv_title"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="30dp"
                    android:background="#ff0" />

                <TextView
                    android:id="@+id/new_friends_tv_send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@id/new_friends_et_check"
                    android:layout_below="@id/new_friends_et_check"
                    android:layout_marginTop="20dp"
                    android:text="发送" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</com.fifteentec.Component.calendar.KeyboardLayout>