<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginTop="10dp"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/event_post"
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:scaleType="fitXY"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/group_logo3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            />
        <com.fifteentec.item.CircularImage
            android:id="@+id/cover_group_logo3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            />
        <TextView
            android:id="@+id/group_event_name"
            android:text="default_name"
            android:layout_width="wrap_content"
            android:layout_height="60sp"
            android:layout_toRightOf="@id/group_logo3"
            android:gravity="bottom"
            android:textSize="18sp"
            />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/event_intro_label"
            android:text="@string/intro"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:id="@+id/event_intro"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textColor="@color/gray"
            android:textSize="15sp"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/time_label"
            android:text="@string/time"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="18dp"
            android:gravity="bottom"
            android:layout_gravity="top"
            />
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="15dp"
            android:textColor="@color/gray"
            android:gravity="bottom"
            android:layout_gravity="top"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:clickable="true">
        <TextView
            android:id="@+id/loc_label"
            android:text="@string/location"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="18dp"
            android:gravity="bottom"
            android:layout_gravity="top"
            />
        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="15dp"
            android:textColor="@color/gray"
            android:gravity="bottom"
            android:layout_gravity="top"
            />
    </LinearLayout>

</LinearLayout>