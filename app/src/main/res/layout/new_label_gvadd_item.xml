<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp" >

    <CheckBox
        android:id="@+id/new_label_gvadd_item_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp" />

    <ImageView
        android:id="@+id/new_label_gvadd_item_iv_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/new_label_gvadd_item_cb"
        android:background="@drawable/ic" />

    <TextView
        android:id="@+id/new_label_gvadd_item_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/new_label_gvadd_item_iv_icon"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/new_label_gvadd_item_iv_icon"
        android:text="姓名" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/new_label_gvadd_item_iv_icon"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/new_label_gvadd_item_iv_icon"
        android:text="更新于xxxx" />

</RelativeLayout>