<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:background="@drawable/background_rectangle"
    android:layout_marginBottom="10dp">

    <ImageView
        android:id="@+id/favorite_post"
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:scaleType="fitXY"
        android:layout_marginTop="10dp"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/group_logo4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            />
        <com.fifteentec.Component.FoundItems.CircularImage
            android:id="@+id/cover_group_logo4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            />
        <TextView
            android:id="@+id/group_event_name2"
            android:text="default_name"
            android:layout_width="wrap_content"
            android:layout_height="60sp"
            android:layout_toRightOf="@id/group_logo4"
            android:gravity="bottom"
            android:textSize="18sp"
            />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/event_intro_label2"
            android:text="@string/intro"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:id="@+id/event_intro2"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textColor="@color/gray"
            android:textSize="15sp"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/time_label2"
            android:text="@string/time"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="18dp"
            android:gravity="bottom"
            android:layout_gravity="top"
            />
        <TextView
            android:id="@+id/time2"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="15dp"
            android:textColor="@color/gray"
            android:gravity="bottom"
            android:layout_gravity="top"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/loc_label2"
            android:text="@string/location"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="18dp"
            android:gravity="bottom"
            android:layout_gravity="top"
            />
        <TextView
            android:id="@+id/location2"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/loc_label2"
            android:textSize="15dp"
            android:textColor="@color/gray"
            android:gravity="bottom"
            android:layout_gravity="top"
            />
        <Button
            android:id="@+id/takepartBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/takepart"
            />
    </RelativeLayout>
</LinearLayout>