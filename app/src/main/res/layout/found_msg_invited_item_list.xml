<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/linearLayout_upper_tab"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dip"
        android:paddingTop="10dip" >

        <RadioButton
            android:id="@+id/invited_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:text="@string/button_invited"
            android:checked="true"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"/>

        <RadioButton
            android:id="@+id/clear_btn"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:text="@string/button_clear"
            android:checked="false"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="280dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/text_border"
        android:orientation="vertical">
        <ListView
            android:id="@+id/listView_msg"
            android:layout_width="fill_parent"
            android:layout_height="170dp"
            >
        </ListView>
        <TextView
            android:id="@+id/send_msg"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/text_border"/>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="10dp">
            <Button
                android:id="@+id/send_msg_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:text="@string/send"
                />
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_marginTop="20dp"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/friend_logo4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            />
        <com.fifteentec.item.CircularImage
            android:id="@+id/cover_friend_logo4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            />
        <TextView
            android:id="@+id/friend_name4"
            android:text="default_name"
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:layout_toRightOf="@id/friend_logo4"
            android:gravity="top"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/send_time_label4"
            android:layout_width="wrap_content"
            android:layout_height="20sp"
            android:layout_toRightOf="@id/friend_logo4"
            android:layout_below="@id/friend_name4"
            android:text="@string/sendtimelabel"/>
        <TextView
            android:id="@+id/sended_time4"
            android:layout_width="wrap_content"
            android:layout_height="20sp"
            android:layout_toRightOf="@id/send_time_label4"
            android:layout_below="@id/friend_name4" />

    </RelativeLayout>
    <TextView
        android:id="@+id/invited_content4"
        android:layout_width="fill_parent"
        android:layout_height="160dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:background="@drawable/text_border"/>
</LinearLayout>